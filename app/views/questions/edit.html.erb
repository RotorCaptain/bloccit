<h1>Edit Question</h1>
<div class="row">
  <div class="col-md-4">
    <p>Guidelines for questions</p>
    <ul>
      <li>No question is bad</li>
      <li>Questions must be sensible.</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @questions do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter question title" %>
      <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter question body" %>
       </div>
      <div class='form-group'>
       <%= f.label :resolved %>
       <%= f.check_box :resolved %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
    <%= link_to "Delete", @questions, class: 'btn btn-danger', method: :delete%>
  </div>
</div>
